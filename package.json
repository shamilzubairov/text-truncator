{
  "name": "text-truncator",
  "version": "1.2.4",
  "description": "Universal library that makes a lot of text truncated in a small parent container.",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "directories": {
    "src": "src"
  },
  "dependencies": {
    "@types/node": "^14.14.34",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "mocha": "^8.3.2"
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "start:exm": "http-server ./example",
    "build:exm": "tsc --build tsconfig.exm.json && rollup example/main.js --file example/bundle.js",
    "prepublishOnly": "npm test && npm run build",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shamilzubairov/text-truncator.git"
  },
  "keywords": [
    "truncate",
    "truncator",
    "textTruncator",
    "text",
    "ellipsis"
  ],
  "author": "Shamil Zubairov",
  "license": "MIT",
  "files": [
    "dist/*",
    "LICENSE.txt",
    "package.json",
    "README.md",
    "tsconfig.json",
    "tslint.json"
  ]
}
